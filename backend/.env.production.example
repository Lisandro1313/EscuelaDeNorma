# Configuración para Producción - Campus Virtual Norma

# Puerto del servidor (Railway/Heroku lo asignan automáticamente)
PORT=${PORT}

# JWT Secret (CAMBIAR POR UN SECRET REAL MÁS SEGURO)
JWT_SECRET=campus_virtual_jwt_secret_production_super_secure_2024

# Ambiente
NODE_ENV=production

# Base de datos PostgreSQL (reemplazar con credenciales reales de Railway/Heroku)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_HOST=your_production_host
DB_PORT=5432
DB_NAME=campus_norma_prod
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# MercadoPago PRODUCCIÓN (reemplazar con tus credenciales REALES)
MERCADOPAGO_ACCESS_TOKEN=APP_USR-your_real_access_token_here
MERCADOPAGO_PUBLIC_KEY=APP_USR-your_real_public_key_here

# URLs de producción (reemplazar con tus dominios reales)
FRONTEND_URL=https://tu-dominio-frontend.vercel.app
BACKEND_URL=https://tu-api-backend.railway.app

# Email configuración (opcional para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# CORS Origins (permitir solo tu frontend)
CORS_ORIGIN=https://tu-dominio-frontend.vercel.app

# Configuración de seguridad adicional
SECURE_COOKIES=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100